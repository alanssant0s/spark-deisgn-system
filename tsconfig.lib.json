{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/components/ui/**/*",
        "src/components/auth/**/*",
        "src/components/errors/**/*",
        "src/components/forms/**/*",
        "src/components/layouts/**/*",
        "src/components/notifications/**/*",
        "src/components/saas/**/*",
        "src/components/LogoProcessor.tsx",
        "src/components/LayoutSettings.tsx",
        "src/lib/**/*",
        "src/hooks/**/*",
        "src/contexts/**/*"
    ],
    "exclude": [
        "src/**/*.stories.*",
        "src/**/*.test.*",
        "src/pages/**/*",
        "src/App.tsx",
        "src/main.tsx",
        "src/stories/**/*",
        "node_modules",
        "dist"
    ]
}