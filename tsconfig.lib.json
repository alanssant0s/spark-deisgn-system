{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/components/ui/**/*",
        "src/hooks/**/*",
        "src/lib/**/*",
        "src/contexts/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "src/stories/**/*",
        "src/pages/**/*",
        "node_modules",
        "dist"
    ]
}